{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build active file",
            "type": "shell",
            "command":  "C:/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "StudentGradeAnalysis.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}